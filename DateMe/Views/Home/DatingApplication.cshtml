@{
    ViewData["Title"] = "Movie Submission";
}

@model Application

<h1>Movie Submission</h1>

<form method="post">

    <input type="hidden" asp-for="MovieId"/>
    <br />
    <label asp-for="Category">Category</label>
    <select asp-for="CategoryId">
        <option value="">Select a category</option>
        @foreach (MovieCategory c in ViewBag.Categories) 
        {
            <option value="@c.CategoryId">@c.Category</option>
        }
    </select>
    <br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title"/>
    <br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year"/>
    <br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director"/>
    <br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option>G</option>
        <option>PG</option>
        <option>PG-13</option>
        <option>R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited">
        <option value="True">Yes</option>
        <option value="False">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="CopiedToPlex">CopiedToPlex</label>
    <select asp-for="CopiedToPlex">
        <option value="True">Yes</option>
        <option value="False">No</option>
    </select>
    <br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" />
    <br />
    <button type="submit">Submit application</button>
    <div asp-validation-summary="All"></div>
</form>